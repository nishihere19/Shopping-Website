extends layout
.nav
  block nav 
      ul
        li
          a(href='/') Home
        li
          a(href='/addProducts') Add Products
        li
          a(href='/') Settings
          ul
            li
              a(href='/resetPass') Password Reset
            li
              a(href='/delUser') Delete Account
            li.last
              a(href='/logout') Logout
        li 
          form(action="/search", method="post")
            input(type="text", name="Searchval",id="searchbar" ,placeholder="Search Products")
            input(type="submit", name="Search", value="Search")
block main-content
  .any
    //h1.title #{title}
    p.msg #{msg}
    each item in result
      label #{item.img}
      img(src="data:image/jpg;base64;"+item.img style="height: 50px; width: 50px")
    script.
      $(function(){
        console.log("w");
        $('#searchbar').autocomplete({
          //console.log("w");
          source: function(req,res){
            $.ajax({
              url:"/autocomplete",
              dataType:"jsonp",
              type: "GET",
              data: req,
              success: function(data){
                res(data);
              },
              error: function(err){
                console.log(err);
              }
            });
          },
          minLength:1,
          select: function(event,ui){
            if(ui.item){
              $('#searchbar').text(ui.item.label);
            }
          }
        })
      });
    

