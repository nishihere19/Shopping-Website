extends layout
.nav
  block nav 
      ul
        li
          a(href='/') Home
block main-content
    .any
        .itemDetails
            table
                tr
                    td(style="width: 100%")
                        img(src="../"+result.img style="height: 200px; width: 200px; float: left")
                    
                tr
                    td
                        span(style="float: left")=result.name
                        
                tr
                    td
                        span Category: #{result.category}
                        
                tr
                    td
                        span Brand: #{result.brand}
                        
                tr
                    td
                        span Model: #{result.modl}
                        
                tr
                    td
                        span MRP: #{result.price}
                        
                tr
                   td
                        span Stock: #{result.stock}
                        
                tr
                    td
                        span.heading Description: 
                        span=result.description
                       
                tr
                    td
                        span.heading Features: 
                        span=result.features
                        
                tr
                    td
                        span Size: #{result.size } 
                        
                tr 
                    td 
                        span Color: #{result.color}
                        
        .customer-options(style="float: left")
            form(action="/cart/"+result._id method="get")
                input(type="submit" value="Add To Cart" name="cart")
            form(action="/wishlist/"+result._id method="get")
                input(type="submit" value="Add To Wishlist" name="wishlist")
            form(action="/buy/"+result._id method="get")
                input(type="submit" value="Buy Now" name="buy")

              